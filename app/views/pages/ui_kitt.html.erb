<main>
  <%# begin of persona template => WHOLE PAGE %>
  <div class="persona--template">
    <div class="persona--template__image" style="<%= background_image %>"></div>

    <div class="persona--template__content py-5">
      <div class="container w-80">
          <h2>Persona template</h2>
      </div>
    </div>
  </div>

  <%# end of persona template %>


  <hr>

  <%# buttons %>
  <div class="container w-80 py-5">

    <h2>Buttons</h2>
    <p  class="pt-3">Primary</p>
    <a href="" class="btn btn-primary">
      Link as a button
    </a>

    <p class="pt-3">Secondary</p>
    <a href="" class="btn btn-outline-primary">
      Link as button
    </a>

    <p class="pt-3">Tertiary</p>
    <a href="" class="btn btn-tertiary">
      Link as a button
    </a>

    <p>Links</p>
    <a href="" class="btn btn-tertiary btn-link">
      Link with some text
    </a>

    <h2>Cards</h2>

    <p class="pt-3">
      pet card
    </p>

    <% pet_image = 'https://images.unsplash.com/photo-1576201836106-db1758fd1c97?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80' %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="pet--card mt-3" style="<%= background_image url: pet_image %>">
          <div class="pet--card__content py-3 px-4">
            <i class="fas fa-paw"></i>
            Some pet here
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="pet--card bg-primary pet--add mt-3">
          <div class="pet--card__content py-3 px-4">
            <i class="fas fa-plus-circle"></i>
            Add new pet
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="notifications--card shadow mt-3">
          <div class="notifications--card__timestamp">
            Just now
          </div>
          <div class="notifications--card__settings">
            <i class="fas fa-ellipsis-v"></i>
          </div>
          <div class="notifications--card__content p-3">
            Some notification content
          </div>
        </div>
      </div>
    </div>

    <h2>Form elements</h2>

    <div class="container w-80">
      <div class="row">
        <div class="col-6 col-md-4 col-lg-3">
          <div class="info--group py-3">
            <p class="info--group__label fw-bold">Pet type</p>
            <p class="info--group__content">Cat</p>
          </div>
        </div>
      </div>


      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
          <textarea class="form--message p-3">Some message here</textarea>
        </div>
      </div>
    </div>

    <h2>Warnings</h2>

    <div class="container w-80">

      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">

          <div class="flash flash-danger flash--container">
            <i class="fas fa-radiation text-danger flash--icon"></i>
            <div class="flash--content row justify-content-end w-100">
              <div class="col-10">
                <p>Some content here</p>
              </div>
            </div>
          </div>

        </div>
        <div class="col-12 col-md-6 col-lg-4">

          <div class="flash flash-warning flash--container">
            <i class="fas fa-info text-warning flash--icon"></i>
            <div class="flash--content row justify-content-end w-100">
              <div class="col-10">
                <p>Some content here</p>
              </div>
            </div>
          </div>

        </div>

        <div class="col-12 col-md-6 col-lg-4">

          <div class="flash flash-success flash--container">
            <i class="fas fa-check text-success flash--icon"></i>
            <div class="flash--content row justify-content-end w-100">
              <div class="col-10">
                <p>Some content here</p>
              </div>
            </div>
          </div>

        </div>

      </div>

    </div>

  </div>


</main>
