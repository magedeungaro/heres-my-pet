<main class="pt-3 mt-3">
  <div class="container row margin-auto pt-3">
    <p> HI <%= current_user.first_name.upcase %> </p>
      <h2> Somebody may have found <%= @pet.name.downcase.capitalize %>! </h2>
      <p class="opacity-75"><small> <%= @tag_reading.created_at.strftime("%m/%d/%Y at %I:%M%p") %> </small></p>
        <textarea disabled class="form--message"><%= @tag_reading.message %> </textarea>
        <div class="mt-3" style="width: 100%; height: 400px;"
                  data-controller="mapbox"
                  data-mapbox-markers-value="<%= @markers.to_json %>"
                  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
</main>
