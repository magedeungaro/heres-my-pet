
<div class="logo--image py-3 container w-80 text-center mt-3">
  <%= link_to root_path do %>
    <img src="<%= asset_path('heresmypet_logo.svg') %>" class="col-4" alt="">
  <% end %>
</div>

<main>
  <div class="container py-3 w-80 mt-3">
    <h2 class="fw-bold text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions row justify-content-center">
        <%= f.button :submit, "Log in", class: 'btn btn-primary mt-3 col-7' %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-outline-danger mt-3 col-7' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>


  </div>
</main>
