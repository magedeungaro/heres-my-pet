<main class="py-3">
  <div class="container">

    <div class="row pt-3 mt-3 justify-content-between margin-auto">

      <div class="col-8">
        <h2 class="fw-bolder ">Notifications</h2>
      </div>

      <div class="col-4 text-end">
        <%= link_to 'Clear all', destroy_all_notifications_path, class:'btn btn-outline-danger btn-sm', method: :delete, data: {confirm: 'This is irreversible! Are you sure?'}%>
      </div>
    </div>

    <div class="notification mt-3 py-3"
  data-controller="user-subscription"
  data-user-subscription-user-id-value="<%= current_user.id %>"
>
    <div class="notifications" data-user-subscription-target="notifications">
      <% @notifications.each do |notification| %>
        <%= render "notification", notification: notification %>
      <% end %>
    </div>
  </div>

  </div>
</main>
